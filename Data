	PHONE_ID SERIAL primary key,
	ADDRESS_ID SERIAL references Address_table(ADDRESS_ID),
	PHONE_NUM INT,
	PHONE_TYPE INT references Phone_type_table(PHONE_TYPE_ID),
	PRIM_PHONE BOOLEAN default 'TRUE'
);

